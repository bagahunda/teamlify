.hero
  position relative
  padding-left 23px
  margin-top 87px

  +above(700px)
    margin-top 100px

  +above(800px)
    padding-left 40px

  &__content
    display flex

  &__text
    flex-grow 1

    +above(1024px)
      padding-top 100px

    +above(1037px)
      padding-left calc((100% - 1037px)/2 + 60px)

  &__img
    width 157px
    flex-shrink 0

    +above(480px)
      width 236px

    +above(1024px)
      width 405px

    +above(1280px)
      width 532px

    +above(1600px)
      width 690px

    & > img
      position relative
