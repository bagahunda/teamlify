.hero
  position relative
  padding-left 23px
  margin-top 87px

  +above(700px)
    margin-top 100px

  +above(800px)
    padding-left 40px

  &__content
    display flex

  &__text
    flex-grow 1

  &__img
    width 157px
    flex-shrink 0

    +above(480px)
      width 236px

    & > img
      position relative
      // top -20px

  &__progress
    padding-top 41px
    margin-left -23px
    text-align center

    img
      width 100%
      margin-bottom 15px

    .title, .lead
      max-width 230px
      margin-left auto
      margin-right auto

      +above(480px)
        max-width 340px
