mixin progress()
  +b.progress#product
      picture
        source(media='(min-width: 1600px)', srcset='/assets/images/demo--1600.png 1x, /assets/images/demo--1600@2x.png 2x')
        source(media='(min-width: 1037px)', srcset='/assets/images/demo--1280.png 1x, /assets/images/demo--1280@2x.png 2x')
        source(media='(min-width: 1024px)', srcset='/assets/images/demo--1024.png 1x, /assets/images/demo--1024@2x.png 2x')
        source(media='(min-width: 480px)', srcset='/assets/images/demo--1024.png 1x, /assets/images/demo--1024@2x.png 2x')
        img(src='/assets/images/demo--1024.png', srcset='/assets/images/demo--1024@2x.png 2x')
      h2.title.title--inner
        | See teams progress&nbsp;at&nbsp;a&nbsp;glance
      p.lead.lead--inner
        | Analyze people activity in JIRA, Git and Slack, all in one place
