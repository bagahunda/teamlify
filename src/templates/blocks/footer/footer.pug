mixin footer()
  +b.footer
    +e.content
      p Do you need help?
      p Call us
        a(href="tel:+18007707070")  +1 800 770-70-70
      .copy
        | &copy; Teamplify. All Rights Reserved.
    +e.bg
      picture
        source(media='(min-width: 1280px)', srcset='/assets/images/footer--1280.png 1x, /assets/images/footer--1280@2x.png 2x')
        source(media='(min-width: 1024px)', srcset='/assets/images/footer--1024.png 1x, /assets/images/footer--1024@2x.png 2x')
        source(media='(min-width: 480px)', srcset='/assets/images/footer--480.png 1x, /assets/images/footer--480@2x.png 2x')
        img(src='/assets/images/footer.png', srcset='/assets/images/footer@2x.png 2x')
    +e.bg1
      picture
        source(media='(min-width: 1024px)', srcset='/assets/images/bird--1024.png 1x, /assets/images/bird--1024@2x.png 2x')
        source(media='(min-width: 480px)', srcset='/assets/images/bird--480.png 1x, /assets/images/bird--480@2x.png 2x')
        img(src='/assets/images/bird.png', srcset='/assets/images/bird@2x.png 2x')
