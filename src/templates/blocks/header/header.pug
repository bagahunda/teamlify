mixin header()
  .svg-sprite
    include ../sprite/svg.svg
  .menu
    +b.UL.app-menu
      +e.LI.item
        a(href="#product") Product
      +e.LI.item
        a(href="#company") Company
      +e.LI.item
        a(href="#prices") Prices
      +e.LI.item
        a(href="#getStarted" class="btn") Get started
  +b.header
    +e.logo
      img(src="/assets/images/logo.svg", alt="teamlify logo")
    +e.menu
      a(href="#getStarted" class="btn") Get started
      +b.menu-icon
        +e.item
        +e.item
        +e.item
