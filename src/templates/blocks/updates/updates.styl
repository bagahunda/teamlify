.updates
  padding 45px 23px 0
  margin 0 auto
  text-align center

  +above(1037px)
    width 1037px
    padding-left 0
    padding-right 0

.slider-container
  margin-bottom 20px

  span
    display block
    margin-top 5px
    font-size 8px
    text-align center

.siema-controls
  margin-top 5px

  +above(1024px)
      display none
  button
    width 8px
    height 8px
    padding 0
    border-radius 50%
    border 1px solid #ffffff
    background-color transparent
    outline none

    &:not(:last-child)
      margin-right 10px

    &.active
      border-color #C2F50F
      background-color #C2F50F
