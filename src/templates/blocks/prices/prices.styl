.prices
  padding 30px 23px 0
  margin 0 auto

  +above(480px)
    padding-top 45px

  +above(1024px)
    padding-top 80px

  +above(1037px)
    width 1037px
    padding-left 0
    padding-right 0

  &__table
    margin-top 15px
    width 100%
    font-size 14px

    +above(480px)
      margin-top 20px
      font-size 21px

    +above(1024px)
      font-size 38px

    td
      padding-top 10px
      padding-bottom 10px
      vertical-align top
      border-top 1px solid rgba(255, 255, 255, 0.2)

      &:first-child
        white-space nowrap

      &:nth-child(2)
        padding-left 6px
        padding-right 6px

        +above(1024px)
          padding-right 0
          padding-left 200px
          display flex
          justify-content space-between
          align-items center

      &:last-child
        text-align right

    span
      display block
      font-size 10px

      +above(480px)
        font-size 15px

      +above(1024px)
        font-size 20px
        width 130px

    tr:last-child
      td
        border-bottom 1px solid rgba(255, 255, 255, 0.2)
