html
  box-sizing border-box

*,
*:before,
*:after
  box-sizing inherit

body
  font-family "Plex Serif ExtraLight", sans-serif
  background-color #232330
  color #ffffff


:disabled, [disabled], [aria-disabled="true"]
  cursor not-allowed

.clearfix:after
    content ""
    display block
    clear both

a
  -webkit-text-decoration-skip: ink
  text-decoration-skip: ink
  color inherit

  &:hover
    text-decoration none
    color #C2F50F

.svg-sprite
  display none

.btn
  display inline-block
  padding 6px 15px
  border none
  font inherit
  font-size 14px
  color #232330
  background-color transparent
  background-image linear-gradient(-179deg, #D1F90A 3%, #0BCE52 100%)
  text-align center
  border-radius 100px
  cursor pointer
  outline none
  appearance none

  +above(480px)
    font-size 21px

  &::-moz-focus-inner
    border none

  &:active
    transform translateY(1px)
    filter saturate(150%)

  &:hover, &:focus
    background-color #fff
    background-image none
    color #0BCE52

img
  max-width 100%
  height auto

.title
    margin 0 0 10px
    font-size 22px
    font-weight normal
    color #C2F50F

    +above(480px)
      font-size 33px

.lead
  font-family "Plex Sans ExtraLight", sans-serif
  font-size 14px

  +above(480px)
    font-size 21px
