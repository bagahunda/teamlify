html
  box-sizing border-box

*,
*:before,
*:after
  box-sizing inherit

body
  font-family "Plex Serif ExtraLight", sans-serif
  background-color #232330
  color #ffffff
  overflow-x hidden


:disabled, [disabled], [aria-disabled="true"]
  cursor not-allowed

.clearfix:after
    content ""
    display block
    clear both

a
  -webkit-text-decoration-skip: ink
  text-decoration-skip: ink
  color inherit

  &:hover
    text-decoration none
    color #C2F50F

.svg-sprite
  display none

.btn
  display inline-block
  padding 6px 15px
  border none
  font inherit
  font-size 14px
  color #232330
  background-color transparent
  background-image linear-gradient(-179deg, #D1F90A 3%, #0BCE52 100%)
  text-align center
  border-radius 100px
  cursor pointer
  outline none
  appearance none
  white-space nowrap

  +above(480px)
    font-size 21px

  &::-moz-focus-inner
    border none

  &:active
    transform translateY(1px)
    filter saturate(150%)

  &:hover, &:focus
    background-color #fff
    background-image none
    color #0BCE52

img
  max-width 100%
  height auto

.title
    margin 0 0 10px
    font-size 22px
    font-weight normal
    color #C2F50F

    +above(480px)
      font-size 33px

    +above(1024px)
      font-size 68px

.lead
  font-family "Plex Sans ExtraLight", sans-serif
  font-size 14px

  +above(480px)
    font-size 21px

  +above(1024px)
    font-size 24px

  +above(1024px)
      font-size 38px

.section
  padding 30px 23px 0
  margin 0 auto

  +above(480px)
    padding-top 45px

  +above(1024px)
    padding-top 80px

  +above(1037px)
    width 1037px
    padding-left 0
    padding-right 0

.title--inner, .lead--inner
    max-width 230px
    margin-left auto
    margin-right auto
    text-align center

    +above(480px)
      max-width 340px

    +above(1024px)
      max-width 820px

.form-control
  padding 0 8px
  width 100%
  height 49px
  font-size 24px
  color #7A7B7F
  appearance none
  outline none
  border 1px solid rgba(255, 255, 255, 0.2)
  background-color transparent

  +above(480px)
    height 73px
    padding 0 12px
    font-size 36px

  +above(1024px)
    height 69px
    font-size 28px
